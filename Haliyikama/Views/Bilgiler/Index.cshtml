@using Haliyikama.ViewModels
<div class="container-fluid Banner-Backgroun">
	<div class="container">
		<div class="jumbotron">
			<h1>FAYDALI BILGILER</h1>
			<p>Değerli Arnavutköy sakinleri, yaşam alanlarınızda bulunan her cins ve her ebattaki halıların temizleme </p>

		</div>
		<div class="row">

			<ul class="breadcrumb">
				<li><a href="/">Home</a></li>
				<li class="active">Faydalı Bilgiler</li>
			</ul>
		</div>
	</div>

</div>

<section>
	<div class="container">
		@{
			foreach (var blog in Model.Blogler)
			{
				<div class="well">
					<div class="media">
						<a class="pull-left" href="#">
							<img class="media-object" style="    max-width: 200px;" src="@blog.ImageURL">
						</a>
						<div class="media-body">
							<h4 class="media-heading">@blog.Name</h4>
							<p class="text-right">By Francisco</p>
							<p>
								@blog.ShortDescription
							</p>
							<ul class="list-inline list-unstyled">
								<li><span><i class="glyphicon glyphicon-calendar"></i> 2 days, 8 hours </span></li>
								<li>|</li>
								<span><i class="glyphicon glyphicon-comment"></i> 2 comments</span>
								<li>|</li>
								<li>
									<span class="glyphicon glyphicon-star"></span>
									<span class="glyphicon glyphicon-star"></span>
									<span class="glyphicon glyphicon-star"></span>
									<span class="glyphicon glyphicon-star"></span>
									<span class="glyphicon glyphicon-star-empty"></span>
								</li>
								<li>|</li>
								<li>
									<!-- Use Font Awesome http://fortawesome.github.io/Font-Awesome/ -->
									<span><i class="fa fa-facebook-square"></i></span>
									<span><i class="fa fa-twitter-square"></i></span>
									<span><i class="fa fa-google-plus-square"></i></span>
								</li>
							</ul>
						</div>
					</div>
				</div>
			}

		}


	</div>
</section>