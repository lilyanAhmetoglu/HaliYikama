@using Haliyikama.ViewModels
@using Haliyikama.Data.Models
@{
	var counter = 0;
	var counter2 = 0;

}
@{

	var a = ((IEnumerable<Ayarlar>)Model.Ayarlar).Cast<dynamic>();

	var query = (from p in a
				 where p.Id == 1

				 select p).ToList().First();

}
<section>
	<div class="container">
		<div class="row ">
			<div class="col-sm-3 col-xs-12 blue-light ">
				<div class="image-wrapper " id="offer">
					<div class="text-centerlize">
						<h1>Halı Yıkama</h1>

						<h1>@query.DescountedPriceSlider</h1>

						<h1>Indirim</h1>
					</div>

				</div>
			</div>
			<div class="col-sm-9 col-xs-12 ">
				<div id="myCarousel" class="carousel slide" data-ride="carousel">



					<!-- Wrapper for slides -->
					<div class="carousel-inner">
						@foreach (var carousel in Model.Carouseller)
						{
							counter++;
							<div class="item @(counter==1?"active":"")">
								<img src="@carousel.ImageUrl" alt="Los Angeles" style="width:100%;">
							</div>


						}


					</div>

					<!-- Left and right controls -->
					<a class="left carousel-control" href="#myCarousel" data-slide="prev">
						<span class="glyphicon glyphicon-chevron-left"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="right carousel-control" href="#myCarousel" data-slide="next">
						<span class="glyphicon glyphicon-chevron-right"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>


		</div>
	</div>


</section>

<section>
	<div class="container-fluid section-video">
		<div class="container">
			<div class="row">

				<div class="col-md-6 col-sm-12">
					<div class="embed-responsive embed-responsive-16by9">
						<iframe class="embed-responsive-item" src="@query.VideoLink" allowfullscreen></iframe>
					</div>
				</div>
				<div class="col-md-6 col-sm-12">
					<div class="row">
						<div class='col-md-offset-2 col-md-8 text-center'>
							<h2>Referenslerimiz</h2>
						</div>
					</div>
					<div class="carousel slide" data-ride="carousel" id="quote-carousel">


						<!-- Carousel Slides / Quotes -->
						<div class="carousel-inner">

							@foreach (var referens in Model.Referensler)
							{
								counter2++;
								<div class="item @(counter2==1?"active":"")">
									<blockquote>
										<div class="row">
											<div class="col-sm-3 text-center">
												<img class="img-circle" src="@referens.ImageURL" style="width: 100px;height:100px;">
												<!--<img class="img-circle" src="https://s3.amazonaws.com/uifaces/faces/twitter/kolage/128.jpg" style="width: 100px;height:100px;">-->
											</div>
											<div class="col-sm-9">
												<p>@referens.Text</p>
												<small>@referens.Name</small>
											</div>
										</div>
									</blockquote>
								</div>
							}
						</div>

						<!-- Carousel Buttons Next/Prev -->
						<a data-slide="prev" href="#quote-carousel" class="left carousel-control"><i class="fa fa-chevron-left"></i></a>
						<a data-slide="next" href="#quote-carousel" class="right carousel-control"><i class="fa fa-chevron-right"></i></a>
					</div>
				</div>

			</div>
		</div>

	</div>


</section>

<section class="team-sec">
	<div class="container">
		<h1 class="text-center">HIZMETLERIMIZ</h1>
		<p class="home-paragraph text-center">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has<br> been the industry's standard dummy text ever since the 1500s, when an</p>
		<div class="row row-flex" style="margin-top:30px">
			<div class="site-content cf">

				<div class="courses cf" id="showcase">

					@foreach (var hizmet in Model.Hizmetler)
					{
						<div class="course-item slide">
							<div class="course-summary card">
								<div class="course-thumbnail">
									<img src="@hizmet.ImageUrl" height="277" width="400" alt="image">
								</div>
								<div class="course-info">
									<div class="course-topic webdesign">@hizmet.ShortDescription</div>
									<h3 class="course-title">@hizmet.Name</h3>
									<div class="course-meta">
										<time class="course-date">@hizmet.Price</time>

									</div>
								</div>
							</div>
						</div>
					}

				</div>
			</div>
		</div>
	</div>
</section>

