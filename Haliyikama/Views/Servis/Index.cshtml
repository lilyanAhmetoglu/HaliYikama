@using Haliyikama.ViewModels

<div class="container-fluid Banner-Backgroun">
	<div class="container">
		<div class="jumbotron">
			<h1>SERVİSLERİMİZ</h1>
			<p>Değerli Arnavutköy sakinleri, yaşam alanlarınızda bulunan her cins ve her ebattaki halıların temizleme </p>

		</div>
		<div class="row">

			<ul class="breadcrumb">
				<li><a href="/">Home</a></li>
			
				<li class="active">Servisler</li>
			</ul>
		</div>
	</div>


</div>

<section class="new-deal">
	<div class="container">
		@{
			foreach (var ilce in Model.Ilceler)
			{
				<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 deal">
					<div class="item-slide">
						<div class="box-img">
							<img src="@ilce.ImageURL" alt="dasdas" />
							<div class="text-wrap">
								<a href="/servis/details/@ilce.IlceId"><h4>@ilce.Name</h4></a>

                             </div>
						</div>
						<div class="slide-hover">
							<div class="text-wrap">
								<p>@ilce.ShortDescription</p>
								<a href="/servis/details/@ilce.IlceId"><h4>@ilce.Name </h4></a>


							</div>
						</div>
					</div>
				</div>
			}

		}

	</div>

</section>